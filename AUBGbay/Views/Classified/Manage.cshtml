@model IEnumerable<AUBGbay.Models.Classified>

@{
    ViewBag.Title = "Manage";
}

<h2>Manage Classifieds</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" })
</p>
<p>
    You have  @ViewBag.classifiedCount Classifieds posted
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Category", "Manage", new { sortOrder = ViewBag.CategorySortParm })
        </th>
        <th>
            @Html.ActionLink("User", "Manage", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortCaption)
        </th>
        <th>
            @Html.ActionLink("Date Created", "Manage", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortCaption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClassifiedID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClassifiedID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClassifiedID })
        </td>
    </tr>
}

</table>
